    <div class="popup-overlay" id="popup-overlay"></div>
    <div class="popup" id="popup">
        <button class="popup-close" onclick="closePopup()">X</button>
        <h2 id="popup-title">Tarefa</h2>
        <p id="popup-message"></p>
    </div>

    <script>
        const table = document.querySelector("table");

        // Impedir marcação nas células de tarefa e dias
        table.addEventListener("click", (e) => {
            const cell = e.target;

            // Verificar se a célula é de tarefa ou um dia
            if (!cell || cell.tagName !== "TD" || cell.classList.contains("task") || cell.classList.contains("day-header")) {
                return; // Não fazer nada
            }

            // Alternar marcação de célula se não for tarefa ou header
            cell.classList.toggle("marked");
            cell.textContent = cell.classList.contains("marked") ? "X" : "";
        });

        // Mostrar informações das tarefas
        function showTaskInfo(task) {
            const taskMessages = {
                agua: "Cálculo de água: Multiplique 35 pelo seu peso em kg. Exemplo: 35 x 80kg = 2.800 ml/dia.",
                cardio: "Faça exercícios de cardio por pelo menos 30 minutos.",
                frutas: "Consuma ao menos 2 frutas diferentes no dia.",
                vacuo: "Realize exercícios de vácuo abdominal por 10 minutos.",
                post: "Poste uma foto ou atualize seu status de progresso.",
                dieta: "Siga rigorosamente a sua dieta planejada.",
                doce: "Evite consumir doces no dia."
            };

            const popup = document.getElementById("popup");
            const overlay = document.getElementById("popup-overlay");
            const title = document.getElementById("popup-title");
            const message = document.getElementById("popup-message");

            if (taskMessages[task]) {
                title.textContent = task.charAt(0).toUpperCase() + task.slice(1);
                message.textContent = taskMessages[task];
                popup.style.display = "block";
                overlay.style.display = "block";
            }
        }

        function closePopup() {
            const popup = document.getElementById("popup");
            const overlay = document.getElementById("popup-overlay");
            popup.style.display = "none";
            overlay.style.display = "none";
        }
    </script>
</body>
